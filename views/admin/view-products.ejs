<%- include("../partials/admin-header")%>
<section>
    <div class="container">
        <div class="row mt-5">
            <a href="admin/add-product" class="btn btn-success btn-lg ml-auto">Add Product</a>
        </div>
        <table class="table mt-5">
  <thead>
    <tr>
      <th scope="col">Sl No.</th>
      <th scope="col">Product Name</th>
      <th scope="col">Type</th>
      <th scope="col">Description</th>
      <th scope="col"> Image</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      <th scope="row"></th>
      <td>{{this.Name}}</td>
      <td>{{this.Price}}</td>
      <td>{{this.Category}}</td>
      <td>{{this.Description}}</td>
      <td><img style="width: 4rem; height:6rem;" src="/images/{{this._id}}.jpg" alt=""></td>
      <td>
        <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary" >Edit</a>
        <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Do You Want To Delete {{this.name}}?')">Delete</a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
    </div>
</section>
<%- include("../partials/footer")%>
